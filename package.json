{
  "name": "jre-search",
  "version": "1.0.0",
  "description": "My rad Nuxt.js project",
  "author": "Jan Blasko",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=development API_URL=http://127.0.0.1:3000/api nodemon server/index.js --watch server",
    "build": "nuxt build",
    "start": "cross-env NODE_ENV=production node server/index.js",
    "generate": "nuxt generate",
    "test": "npm run lint && nyc --reporter=html --reporter=text --timeout=3000 ava --verbose",
    "ava": "ava --verbose",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "lint": "xo"
  },
  "dependencies": {
    "@nuxtjs/axios": "^5.3.6",
    "auth0-lock": "^11.14.0",
    "body-parser": "^1.18.3",
    "compendium-js": "0.0.31",
    "cookie-universal-nuxt": "^2.0.14",
    "cross-env": "^5.2.0",
    "dotenv": "^6.2.0",
    "esm": "^3.0.84",
    "express": "^4.16.4",
    "mongodb": "^3.1.10",
    "node-sass": "^4.11.0",
    "nuxt": "^2.0.0",
    "sass-loader": "^7.1.0",
    "simple-youtube-api": "^5.1.1",
    "string": "^3.3.3",
    "vue-filter-number-format": "^1.0.3",
    "vuetify": "^1.2.4"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "coveralls": "^3.0.2",
    "eslint": "^5.10.0",
    "eslint-plugin-vue": "^5.0.0",
    "nodemon": "^1.11.0",
    "nyc": "^13.1.0",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "xo": "^0.23.0"
  },
  "xo": {
    "extensions": [
      "vue"
    ],
    "extends": [
      "plugin:vue/recommended",
      "plugin:prettier/recommended",
      "prettier",
      "prettier/unicorn"
    ],
    "settings": {
      "import/core-modules": [
        "vue",
        "vuex"
      ]
    },
    "rules": {
      "vue/html-indent": [
        "error",
        "tab"
      ],
      "vue/max-attributes-per-line": [
        2,
        {
          "singleline": 4
        }
      ],
      "import/extensions": [
        "error",
        "never",
        {
          "vue": "ignorePackages",
          "svg": "always"
        }
      ],
      "import/no-unresolved": [
        2,
        {
          "ignore": [
            "vue$",
            "svg$"
          ]
        }
      ],
      "unicorn/filename-case": 0
    }
  }
}
